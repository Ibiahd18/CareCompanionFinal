<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".SettingsActivity">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:background="#F2F2F2"
        android:onClick="launchHomePage"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="35dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/settings"
            android:textColor="@color/dark_blue"
            android:textSize="35sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/search_bar"
            android:drawableLeft="@drawable/magnifying_glass_svgrepo_com"
            android:drawablePadding="10dp"
            android:hint="Search for a setting..."
            android:paddingStart="10dp"
            android:textSize="20dp"
            android:textColorHint="#B3B3B3" />

        <EditText
            android:id="@+id/txtcondition"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_bg3"
            android:drawableStart="@drawable/user_svgrepo_com"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="20dp"
            android:text="Account"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#B8B7B7" />

        <EditText
            android:id="@+id/txtcondition3"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg3"
            android:drawableStart="@drawable/notification_svgrepo_com"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="20dp"
            android:text="Notifications"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#B8B7B7" />

        <EditText
            android:id="@+id/txtcondition4"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg3"
            android:drawableStart="@drawable/eye_show_svgrepo_com"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="20dp"
            android:text="Appearance"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#B8B7B7" />

        <EditText
            android:id="@+id/txtcondition5"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg3"
            android:drawableStart="@drawable/lock_svgrepo_com"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="20dp"
            android:text="Privacy &amp; Security"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#B8B7B7" />

        <EditText
            android:id="@+id/txtcondition6"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg3"
            android:drawableStart="@drawable/headset_line_svgrepo_com"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="20dp"
            android:text="Help and Support"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#B8B7B7" />

        <EditText
            android:id="@+id/txtcondition8"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg3"
            android:drawableStart="@drawable/help_circle_svgrepo_com"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="20dp"
            android:text="About"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#B8B7B7" />

        <EditText
            android:id="@+id/txtcondition9"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg3"
            android:drawableStart="@drawable/sign_out_svgrepo_com"
            android:drawablePadding="20dp"
            android:text="Logout"
            android:textColor="#754541"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>