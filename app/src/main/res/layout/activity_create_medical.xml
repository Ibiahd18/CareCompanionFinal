<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39495C"
    tools:context=".Create_medical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medical_information"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingTop="12dp"
            android:textColor="#C4D2E1"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_provide_your_medical_information_in_the_columns_below"
            android:textColor="#B1BCC8"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtcondition"
            android:layout_width="332dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/medical_id_bg"
            android:drawableStart="@drawable/clipboard_list_svgrepo_com__2_"
            android:ems="10"
            android:drawablePadding="20dp"
            android:text="@string/medical_conditions"
            android:textColor="#C2CAD3"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTxtMultiLine"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="@string/list_your_medical_conditions"
            android:textSize="16sp"
            android:background="@null"
            android:textColor="#C2CAD3"
            android:paddingStart="50dp"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:background="#000000" />

        <EditText
            android:id="@+id/txtcondition2"
            android:layout_width="332dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/medical_id_bg"
            android:drawableStart="@drawable/blood_type_svgrepo_com"
            android:ems="10"
            android:drawablePadding="20dp"
            android:text="@string/blood_type"
            android:textColor="#C2CAD3"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:textColor="#C2CAD3"/>

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:background="#000000" />

        <EditText
            android:id="@+id/txtcondition3"
            android:layout_width="332dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/medical_id_bg"
            android:drawableStart="@drawable/no_svgrepo_com"
            android:ems="10"
            android:drawablePadding="20dp"
            android:text="@string/allergies"
            android:textColor="#C2CAD3"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTxtMultiLine3"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="@string/list_your_allergies"
            android:textSize="16sp"
            android:background="@null"
            android:textColor="#C2CAD3"
            android:paddingStart="50dp"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:background="#000000" />

        <EditText
            android:id="@+id/txtcondition4"
            android:layout_width="332dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/medical_id_bg"
            android:drawableStart="@drawable/medicine_svgrepo_com"
            android:ems="10"
            android:drawablePadding="20dp"
            android:text="@string/current_medication"
            android:textColor="#C2CAD3"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTxtMultiLine4"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="@string/list_any_medication_you_take"
            android:textSize="16sp"
            android:background="@null"
            android:textColor="#C2CAD3"
            android:paddingStart="50dp"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:background="#000000" />

        <EditText
            android:id="@+id/txtcondition5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/medical_id_bg"
            android:drawableStart="@drawable/weight_svgrepo_com"
            android:drawablePadding="20dp"
            android:ems="10"
            android:text="@string/weight"
            android:textColor="#C2CAD3"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTxtMultiLine5"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="@string/enter_your_weight"
            android:textSize="16sp"
            android:background="@null"
            android:textColor="#C2CAD3"
            android:paddingStart="50dp"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:background="#000000" />

        <EditText
            android:id="@+id/txtcondition6"
            android:layout_width="332dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/medical_id_bg"
            android:drawableStart="@drawable/stick_man_svgrepo_com"
            android:ems="10"
            android:drawablePadding="20dp"
            android:text="@string/height"
            android:textColor="#C2CAD3"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTxtMultiLine6"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="@string/enter_your_height"
            android:textSize="16sp"
            android:background="@null"
            android:textColor="#C2CAD3"
            android:paddingStart="50dp"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:background="#000000" />

        <EditText
            android:id="@+id/txtcondition7"
            android:layout_width="332dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/medical_id_bg"
            android:drawableStart="@drawable/date_svgrepo_com"
            android:ems="10"
            android:drawablePadding="20dp"
            android:text="@string/date_of_birth"
            android:textColor="#C2CAD3"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTxtMultiLine7"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="@string/list_your_dob"
            android:textSize="16sp"
            android:background="@null"
            android:textColor="#C2CAD3"
            android:paddingStart="50dp"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:background="#000000" />

        <EditText
            android:id="@+id/txtcondition8"
            android:layout_width="332dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/medical_id_bg"
            android:drawableStart="@drawable/address_location_map_svgrepo_com"
            android:ems="10"
            android:drawablePadding="20dp"
            android:text="@string/address"
            android:textColor="#C2CAD3"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTxtMultiLine8"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="@string/enter_your_address"
            android:textSize="16sp"
            android:background="@null"
            android:textColor="#C2CAD3"
            android:paddingStart="50dp"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:background="#000000" />

        <EditText
            android:id="@+id/txtcondition9"
            android:layout_width="332dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/medical_id_bg"
            android:drawableStart="@drawable/donations_svgrepo_com"
            android:ems="10"
            android:drawablePadding="20dp"
            android:text="@string/organ_donor"
            android:textColor="#C2CAD3"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTxtMultiLine9"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="@string/tap_to_set_satus"
            android:textSize="16sp"
            android:background="@null"
            android:textColor="#C2CAD3"
            android:paddingStart="50dp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/button2"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_bg"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="#FBF9F9"
            android:textSize="23dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>